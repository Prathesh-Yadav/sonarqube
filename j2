
pipeline {
  agent {
    label "Java"
  }
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean install'
      }
    }
    
    stage('jacoco') {
      steps {
        jacoco()
      }
    }
    
    stage('SonarQube analysis') {
      steps {
        script {
          def scannerHome = tool 'scanner_sonar'
          withSonarQubeEnv('jenkins-sonar') {
            sh """
              ${scannerHome}/bin/sonar-scanner \
              -Dsonar.projectKey=javawebapp \
              -Dsonar.projectName=javawebapp \
              -Dsonar.projectVersion=1.0 \
              -Dsonar.java.binaries='target/classes'
            """
          }
        }
      }
    }
    /*
    stage("Sonar Quality Gate Check") {
      steps {
        timeout(time: 1, unit: 'HOURS') {
          script {
            def qualityGate = waitForQualityGate()
            if (qualityGate.status != 'OK') {
              error "Pipeline aborted due to quality gate failure: ${qualityGate.status}"
            }
          }
        }
      }
    }
    */
    stage('Upload to Nexus') {
      steps {
        nexusArtifactUploader(
          artifacts: [[
            artifactId: 'SimpleWebApplication', 
            classifier: '', 
            file: 'target/SimpleWebApplication.war', 
            type: 'war'
          ]], 
          credentialsId: 'nexus-ssh', 
          groupId: 'com.maven', 
          nexusUrl: '13.233.197.98:8081/', 
          nexusVersion: 'nexus3', 
          protocol: 'http', 
          repository: 'maven-snapshots', 
          version: '1.0.0-SNAPSHOT'
        )
      }
    }
  /*
  stage('Send build artifacts over SSH) { 
      steps{
	sshPublisher(publishers: [sshPublisherDesc(config Name: 'Tomcat_Deploy", transfers: [sshTransfer(cleanRemote: false, excludes:", execCommand: ", execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: 'L.]+*, remoteDirectory: 'apache-tomcat-10.1.30/webapps', remoteDirectorySDF: false, removePrefix: ", sourceFiles: SimpleWebApplication.war')], usePromotionTimestamp: false, use WorkspacelnPromotion: false, verbose: false)
    }
  }
*/
  stage('Download Latest WAR from Nexus') {
    agent {
        label "Tomcat1"
    }
    steps {
        script {
            // Download maven-metadata.xml from Nexus
            sh """
            curl -u admin:admin -O http://13.233.197.98:8081/repository/snapshotnew/com/maven/SimpleWebApplication/maven-metadata.xml
            """

            // Extract the latest version using shell commands
            def timestamp = sh(script: "cat maven-metadata.xml | grep '<timestamp>' | tail -n 1 | sed 's/.*<timestamp>\\(.*\\)<\\/timestamp>/\\1/'", returnStdout: true).trim()
            def buildNumber = sh(script: "cat maven-metadata.xml | grep '<buildNumber>' | tail -n 1 | sed 's/.*<buildNumber>\\(.*\\)<\\/buildNumber>/\\1/'", returnStdout: true).trim()

            // Construct the URL of the latest artifact
            def latestArtifactUrl = "http://13.233.197.98:8081/repository/snapshotnew/com/maven/SimpleWebApplication/1.0.0-SNAPSHOT/SimpleWebApplication-1.0.0-${timestamp}-${buildNumber}.war"
            echo "Latest artifact URL: ${latestArtifactUrl}"

            // Download the latest WAR file
            sh "curl -u admin:admin -O ${latestArtifactUrl}"

            // Deploy the WAR to Tomcat
            sh """
            mv SimpleWebApplication-1.0.0-${timestamp}-${buildNumber}.war /home/tomcat1/apache-tomcat-10.1.31/webapps/
            """
        }
    }
}

      
