
pipeline {
  agent {
    label "Java"
  }
    environment {
        value = '' // Declare the global variable here
    }
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean install'
      }
    }
    
    stage('jacoco') {
      steps {
        jacoco()
      }
    }
    
    stage('SonarQube analysis') {
      steps {
        script {
          def scannerHome = tool 'scanner_sonar'
          withSonarQubeEnv('jenkins-sonar') {
            sh """
              ${scannerHome}/bin/sonar-scanner \
              -Dsonar.projectKey=javawebapp \
              -Dsonar.projectName=javawebapp \
              -Dsonar.projectVersion=1.0 \
              -Dsonar.java.binaries='target/classes'
            """
          }
        }
      }
    }
    /*
    stage("Sonar Quality Gate Check") {
      steps {
        timeout(time: 1, unit: 'HOURS') {
          script {
            def qualityGate = waitForQualityGate()
            if (qualityGate.status != 'OK') {
              error "Pipeline aborted due to quality gate failure: ${qualityGate.status}"
            }
          }
        }
      }
    }
    */
    stage('Upload to Nexus') {
      steps {
        nexusArtifactUploader(
          artifacts: [[
            artifactId: 'SimpleWebApplication', 
            classifier: '', 
            file: 'target/SimpleWebApplication.war', 
            type: 'war'
          ]], 
          credentialsId: 'nexus-ssh', 
          groupId: 'com.maven', 
          nexusUrl: '13.233.197.98:8081/', 
          nexusVersion: 'nexus3', 
          protocol: 'http', 
          repository: 'maven-snapshots', 
          version: '1.0.0-SNAPSHOT'
        )
      }
    }
  stage('Download Latest WAR from Nexus to tomcat1 server') {
    agent {
        label "Tomcat1"
    }
    steps {
	script {
                    // Download maven-metadata.xml from Nexus
                    sh """
                    curl -u admin:admin -O http://13.233.197.98:8081/repository/maven-snapshots/com/maven/SimpleWebApplication/1.0.0-SNAPSHOT/maven-metadata.xml
		    pwd
		    ls -al
      		    """
      		    value = sh(script: "grep '<value>' maven-metadata.xml | sed -e 's/.*<value>\\(.*\\)<\\/value>/\\1/'", returnStdout: true).trim()
        	    echo "Latest Artifact Version: $value"
                }
         }
     }
     stage('Taking backup and stop tomcat') {
    agent {
        label "ansible"
    }
    steps {
	script {
 	  	sh """
                ansible-playbook /etc/ansible/playbookk.yml -i /etc/ansible/hosts
            """
           }
        }
     }
     stage('Copying application to webapps folder') {
    agent {
        label "Tomcat1"
    }
    steps {
	script {
 		 sh """
		    curl -u admin:admin -O http://13.233.197.98:8081/repository/maven-snapshots/com/maven/SimpleWebApplication/1.0.0-SNAPSHOT/SimpleWebApplication-${value}.war
		    pwd
		    """
                    sh "cp SimpleWebApplication-${value}.war /home/tomcat1/apache-tomcat-10.1.31/webapps"
		    }
      		}
	}
stage('After moving the application to webapps start tomcat') {
    agent {
        label "ansible"
    }
    steps {
	script {
 	  	sh """
                ansible-playbook /etc/ansible/playbook2.yml -i /etc/ansible/hosts
            """
           }
        }
     }
  }
}
